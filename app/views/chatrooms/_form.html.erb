  <h1 class="h1-new-chat">New chatroom</h1>

<div class="container-new-chat">
    <%= simple_form_for [group, chatroom] do |f| %>
      <div class="form-inputs">
        <%= f.input :name %>
      </div>
      <div class="form-actions">
        <%= f.submit "Create chat", class: "btn btn-dark" %>
      </div>
    <% end %>
</div>
