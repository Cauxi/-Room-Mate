  <h2>Create your group</h2>
  <%= link_to "Create your group", new_group_path %>


<h2>Manage Your Invitations</h2>
 <% @groups.each do |group| %>
      <% group.members.each do |member| %>
            <h5> <%= member.user.first_name %> <%= member.user.last_name %></h5>
            <h6>Wants to enter your <%= member.group.name %></h6>
            <p> Current status from this member: <strong><%= member.status %></strong>.</p>
            <% if member.status == "pending" %>
              <p> You want to: <%= link_to "Accept", accept_path(member), data: {turbo_method: :patch}  %> or <%= link_to "Reject", reject_path(member), data: {turbo_method: :patch} %> ?</p>
             <% else %>
              <p><i class="fa-solid fa-envelope-circle-check" style="color: #494949;"></i> The requester will receive an email about your decision. </p>
            <% end %>
        </div>
      <% end %>
    <% end %>

<h2>Check the status of your invitations</h2>
 <% @members.each do |member| %>
      <ul>
        <p>Your join request to <%= member.group.name %> is: <strong><%= member.status %></strong>.</p>
      </ul>
    </div>
  <% end %>
