<div class="container d-flex justify-content-between">
 <div class="card-image">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-6">
    </div>
  </div>
</div>
<div class="main w-100 m-0">
    <div class="main-image">
      <% @user.photo.attached? %>
      <div class="mt-3">
        <%= cl_image_tag @user.photo.key, height: 300, width: 400, crop: :fill %>
      </div>
  <div class="card-image-infos">
    <div>
      <h1><%=@user.first_name %> <%= @user.last_name %>, <%= @user.age %></h1>
      <h5>Wants to live in <%= @user.location %></h5>
      <br>
      <h5>About me:</h5>
      <p><%= @user.description %></p>
      <br>
    <h4>Interests</h4>
    <div class="interests">
      <% @user.tags.split(",").each do |tag| %>
      <ul>
        <li>
          <%= tag %>
        </li>
      </ul>
      <% end %>
    </div>
  </div>
</div>

<% if current_user.groups.empty? == false %>
  <% if @user.groups.empty? == false %>
    <p></p>
  <% elsif @user.members.empty? == true %>
    <p>Invite <%= @user.first_name %> to:</p>
    <%= button_to current_user.groups[0].name,  new_member_user_path(@user.nickname), method: :post %>
  <% elsif @user.members.first.status != "accepted" %>
    <p>Invite <%= @user.first_name %> to:</p>
    <%= button_to current_user.groups[0].name,  new_member_user_path(@user.nickname), method: :post %>
  <% end %>
<% end %>
