<% if message.user == current_user %>
  <div id="message-<%= message.id %>" class= "my-message mt-3">
    <div class= "current-user-bubble">
      <div class="my-bubble-content d-flex mt-3">
        <p class= "mt-2"><%= message.content %></p>
      </div>
       <i class="data"><%= message.created_at.strftime("%e %b %y %H:%M%p")%></i>
    </div>
  </div>
<% else %>
  <div id="message-<%= message.id %>" class= "message d-flex mt-3">
  <div class="msg-avatar">
    <%= cl_image_tag message.user.photos.first.key, height: 30, width: 30, crop: :fill, class: "message-avatar" %>
  </div>
    <div class= "container-bubble">
        <div class="bubble-content d-flex mt-3">
          <p class= "mt-2 ms-3"><%= message.content %></p>
        </div>
        <i class="data"><%= message.created_at.strftime("%e %b %y %H:%M%p")%></i>
    </div>
  </div>
<% end %>
