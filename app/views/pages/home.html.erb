
<div class="justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: root_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

  <% if current_user %>
    <% if current_user.groups.empty? %>
      <% @groups.each do |group| %>
        <ul>
          <li><%= link_to group.name, group_path(group) %></li>
        </ul>
      <% end %>
    <% else %>










<div id="carouselExample" class="carousel slide pointer-event" data-bs-interval="99999" data-bs-ride="carousel">
  <div class="carousel-inner" >
      <% @users_show.each_with_index do |x, index| %>
      <% if index == 0 %>
        <div class="carousel-item active ">
       <% else %>
        <div class="carousel-item">
       <% end %>
        <div class="my-3">
          <div class= "container">
            <div class= "row">
              <div class="col-md-4">
                <%= link_to user_path(x) do %>
               <div class="card-trip" style="position: relative;">
                  <% if x.gender == "Male" %>
                    <%= cl_image_tag x.photos.first.key, height: 400, width: 350, crop: :fill if x.photos.attached? %>
                    <div id="user" style="position: absolute; top: 0; left: 0;"> <%= x.first_name %>, <%= x.age %> <i class="fa-solid fa-mars"></i></div>
                  <% else %>
                    <%= cl_image_tag x.photos.first.key, height: 400, width: 350, crop: :fill if x.photos.attached? %>
                    <div id="user" style="position: absolute; top: 0; left: 0;"> <%= x.first_name %>, <%= x.age %> <i class="fa-solid fa-venus"></i></div>
                  <% end %>
                  <div class="card-body">
                    <br>
                    <p class="card-tags">
                      <% x.tags.split(",").each do |tag| %>
                        <ul id="card-ul">
                          <li id="card-li">
                            <%= tag %>
                          </li>
                        </ul>
                      <% end %>
                    </p>
                      <% end %>
                </div>
                </div>
              </div>
            </div>
          </div>
      </div>
      </div>
      <% end %>
      </div>
    </div>
    <% end %>
  <% else %>
    <h1>Sign up/in to start!</h1>
  <% end %>
</div>
